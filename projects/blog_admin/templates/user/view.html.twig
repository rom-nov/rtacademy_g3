{% extends 'base.html.twig' %}

{% block title %}View #{{ user.id }} | Users | {% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="{{ path('users_list') }}">Users</a></li>
                            <li class="breadcrumb-item active">View</li>
                        </ol>
                    </div>
                    <h4 class="page-title">User #{{ user.id }}</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <label>ID</label>
                            <div>
                                {{ user.id }}
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Login</label>
                            <div>
                                {{ user.login }}
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Email</label>
                            <div>
                                {{ user.email }}
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Firstname</label>
                            <div>
                                {{ user.firstname }}
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Lastname</label>
                            <div>
                                {{ user.lastname }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
